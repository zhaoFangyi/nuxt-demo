{
  "apps": [
    {
      "name": "name",
      "script": "./dist/app.js",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "combine_logs": true,
      "exec_mode": "fork_mode"
    }
  ],
  "deploy": {
    "dev": {
      "user": "developer",
      "host": "xxx.xxx.xx",
      "ref": "origin/master",
      "repo": "https://github.com/zhaoFangyi/nuxt-demo.git",
      "path": "/home/developer/app/项目名称",
      "post-deploy": "npm install && babel src/ -d dist && NODE_ENV=test pm2 startOrRestart ecosystem.json"
    }
  }
}